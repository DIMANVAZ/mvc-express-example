doctype html
html(lang="en")
    head
        title= 'Motorcycles'
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
    body
        h3 #{message}
        table.table.table-striped
            tr
                th InnerID
                th Brand
                th Model
                th Year
            // если нам прилетели всеЗаписи
            if allRecords!==false
            each moto in allRecords
                tr
                    td  #{moto.innerID}
                    td  #{moto.brand}
                    td  #{moto.model}
                    td  #{moto.year}
            // если прилетела одна запись, и она = объект
            if one !== null && typeof one === 'object'
                tr
                    td  #{one.innerID}
                    td  #{one.brand}
                    td  #{one.model}
                    td  #{one.year}
style.
    body
    {padding: 40px}
